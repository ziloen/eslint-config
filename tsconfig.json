{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "declaration": true,
    "erasableSyntaxOnly": true,
    "isolatedDeclarations": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ESNext",
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}